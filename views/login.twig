{% extends 'layout.twig' %}
{% block login %}

<form action="/php/auth" method="post" class="bg-light px-3 py-2">
    <h1>Ingreso</h1>
    <div class="alert alert-success" role="alert">
    {{ responseMessage }}
    </div>
    <div class="d-flex py-2">
        <label for="email">Correo:</label>
        <input type="email" class="form-control ml-1" id="email" name="email" placeholder="Correo electrónico">
    </div>
    <div class="d-flex py-2">
        <label for="password">Contraseña:</label>
        <input type="password" class="form-control ml-1" id="password" name="password" placeholder="*****">
    </div>
    <input type="submit" class="btn btn-danger" value="Ingresar">
</form>

{% endblock %}