{% extends 'layout.twig' %}
{% block addUser %}
    
    <form action="/php/user/add" method="post" enctype="multipart/form-data" class="bg-light px-3 py-2">
        <h1>Nuevo usuario</h1>
        <div class="alert alert-success" role="alert">
        {{ responseMessage }}
        </div>
        <div class="d-flex py-2">
            <label for="name">Nombre:</label>
            <input class="form-control ml-1" id="username" type="text" name="username" placeholder="Nombre">
        </div>
        <div class="d-flex py-2">
            <label for="password">Contraseña:</label>
            <input type="password" class="form-control ml-1" id="password" name="password" placeholder="*****">
        </div>
        <div class="d-flex py-2">
            <label for="email">Correo:</label>
            <input type="email" class="form-control ml-1" id="email" name="email" placeholder="Correo electrónico">
        </div>
        <input type="submit" class="btn btn-success" value="Guardar">
    </form>
    <a class="btn btn-warning" href="/php/job/add">Nuevo trabajo</a>
    <a class="btn btn-warning" href="/php/project/add">Nuevo proyecto</a>
    <a class="btn btn-warning" href="/php">Inicio</a>
{% endblock %}